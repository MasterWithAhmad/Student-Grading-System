<div class="container-fluid px-4">
    <h1 class="mt-4"><%= title %></h1>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <div class="card mb-4">
        <div class="card-header">
            Course Details
        </div>
        <div class="card-body">
            <form action="<%= action %>" method="POST" class="needs-validation" novalidate>
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label for="course_name" class="form-label">Course Name</label>
                        <input type="text" class="form-control" id="course_name" name="course_name" value="<%= course ? course.course_name : '' %>" required>
                    </div>
                    <div class="col-md-4">
                        <label for="course_code" class="form-label">Course Code</label>
                        <input type="text" class="form-control" id="course_code" name="course_code" value="<%= course ? course.course_code : '' %>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%= course ? course.description : '' %></textarea>
                </div>
                <div class="mb-3 col-md-4">
                    <label for="credits" class="form-label">Credits</label>
                    <input type="number" class="form-control" id="credits" name="credits" value="<%= course ? course.credits : '' %>" min="0" step="0.5">
                </div>
                
                <button type="submit" class="btn btn-primary me-2">Save Course</button>
                <a href="/courses" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div> 